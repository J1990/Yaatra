<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activities.PeerToPeerActivity">
        <ListView
            android:id="@+id/listNearbyDevices"
            android:layout_width="411dp"
            android:layout_height="206dp"
            android:layout_marginTop="52dp"
            android:background="#00FFFFFF"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/peer_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/startNavigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/peer_recycler_view"
            android:layout_alignParentRight="true"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="37dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:paddingTop="200dp"
            android:src="@drawable/ic_btn_navigation"
            android:tooltipText=" Enter Destination"
            android:visibility="visible" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignBottom="@id/peer_recycler_view"
            android:layout_marginBottom="15dp"
            android:layout_centerHorizontal="true"
            android:columnCount="2"
            android:rowCount="1">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSearching"
                android:layout_width="wrap_content"
                android:layout_column="0"
                android:layout_gravity="top"
                android:layout_marginRight="10dp"
                android:text="Searching"
                android:textColor="#8018C0B0"
                android:textSize="24sp"
                android:textStyle="bold">

            </androidx.appcompat.widget.AppCompatTextView>

            <com.agrawalsuneet.dotsloader.loaders.TashieLoader
                android:id="@+id/loader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginTop="12dp"
                app:tashieloader_animDelay="200"
                app:tashieloader_animDur="1000"
                app:tashieloader_dotsColor="#8018C0B0"
                app:tashieloader_dotsDist="5dp"
                app:tashieloader_dotsRadius="6dp"
                app:tashieloader_interpolator="@android:anim/accelerate_interpolator"
                app:tashieloader_noOfDots="5" />

        </GridLayout>

    </RelativeLayout>

</layout>